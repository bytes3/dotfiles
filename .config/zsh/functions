mkk() {
  mkdir -p "$1"
  cd "$1"
}

k7build() {
  cd ~/Dev/by-others/qmk_firmware 
  make keychron/k7_max/ansi/rgb:default:build
  make keychron/k7_max/ansi/rgb:default:flash
}

# Usage: paste the url file and type `vimurl https://example.org/ html`
function vimurl(){
  curl -s "$1" | nvim -c "setlocal buftype=nowrite" -c "set filetype=$2" -;
}

# Usage: copy some text that is html and type `vimpaste html`
function vimpaste() {
  wl-paste | nvim -c "set filetype=$1"
}
